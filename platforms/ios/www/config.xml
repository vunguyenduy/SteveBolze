    <!-- For Android-->
    <icon src="img/icons/android/SteveBolze-icon-63.png" gap:platform="android" gap:density="ldpi" />
    <icon src="img/icons/android/SteveBolze-icon-63.png" gap:platform="android" gap:density="mdpi" />
    <icon src="img/icons/android/SteveBolze-icon-94.png" gap:platform="android" gap:density="hdpi" />
    <icon src="img/icons/android/SteveBolze-icon-125.png" gap:platform="android" gap:density="xhdpi" />

    <gap:splash src="img/splash/SteveBolze-splash.png" gap:platform="android" gap:density="ldpi" />
    <gap:splash src="img/splash/SteveBolze-splash.png" gap:platform="android" gap:density="hdpi" />
    <gap:splash src="img/splash/SteveBolze-splash.png" gap:platform="android" gap:density="mdpi" />
    <gap:splash src="img/splash/SteveBolze-splash.png" gap:platform="android" gap:density="xhdpi" />

    <!-- For BB-->
    <icon src="img/icons/bb/SteveBolze-icon-68.png" gap:platform="blackberry" />
    <icon src="img/icons/bb/SteveBolze-icon-68.png" gap:platform="blackberry" gap:state="hover"/>

    <gap:splash src="img/splash/SteveBolze-splash-640x960.png" gap:platform="blackberry" />

    <!-- For WP-->
