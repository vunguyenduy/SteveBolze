<?xml version='1.0' encoding='utf-8'?>
<widget id="com.SteveBolze.ceo" xmlns:gap="http://phonegap.com/ns/1.0" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Steve Bolze</name>
    <preference name="DisallowOverscroll" value="true" />
    <description>
        CEO, General Electric
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <preference name="fullscreen" value="true" />
    <preference name="webviewbounce" value="true" />
    
    <icon src="img/icons/SteveBolze-icon-57.png" />

    <!-- For iOS-->
    <icon src="img/icons/SteveBolze-icon-57.png" gap:platform="ios" width="57" height="57" />
    <icon src="img/icons/SteveBolze-icon-72.png" gap:platform="ios" width="72" height="72" />
    <icon src="img/icons/SteveBolze-icon-114.png" gap:platform="ios" width="114" height="114" />

    <gap:splash src="img/splash/Splash-640x960.png" gap:platform="ios" width="640" height="960" />
    <gap:splash src="img/splash/Splash-640x1136.png" gap:platform="ios" width="640" height="1136" />
    <!--<gap:splash src="img/splash/SteveBolze-splash-1024x768.png" gap:platform="ios" width="1024" height="768" />-->
    <gap:splash src="img/splash/SteveBolze-splash-2008x1536.png" gap:platform="ios" width="2048" height="1536" />
    <gap:splash src="img/splash/SteveBolze-splash-1536x2008.png" gap:platform="ios" width="1536" height="2008" />

    <!-- For Android-->
    <icon src="img/icons/android/SteveBolze-icon-63.png" gap:platform="android" gap:density="ldpi" />
    <icon src="img/icons/android/SteveBolze-icon-63.png" gap:platform="android" gap:density="mdpi" />
    <icon src="img/icons/android/SteveBolze-icon-94.png" gap:platform="android" gap:density="hdpi" />
    <icon src="img/icons/android/SteveBolze-icon-125.png" gap:platform="android" gap:density="xhdpi" />

    <gap:splash src="img/splash/android/Splash-480x800.png" gap:platform="android" gap:density="ldpi" />
    <gap:splash src="img/splash/android/Splash-480x800.png" gap:platform="android" gap:density="hdpi" />
    <gap:splash src="img/splash/android/Splash-1080x1920.png" gap:platform="android" gap:density="mdpi" />
    <gap:splash src="img/splash/android/Splash-1080x1920.png" gap:platform="android" gap:density="xhdpi" />

    <!-- For BB-->
    <icon src="img/icons/bb/SteveBolze-icon-68.png" gap:platform="blackberry" />
    <icon src="img/icons/bb/SteveBolze-icon-68.png" gap:platform="blackberry" gap:state="hover"/>

    <gap:splash src="img/splash/SteveBolze-splash-640x960.png" gap:platform="blackberry" />

    <!-- For WP-->
    <gap:splash src="img/splash/SteveBolze-splash-640x960.png" gap:platform="winphone" />
</widget>