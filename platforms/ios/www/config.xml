<?xml version='1.0' encoding='utf-8'?>
<widget id="com.SteveBolze.ceo" xmlns:gap="http://phonegap.com/ns/1.0" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Steve Bolze</name>
    <preference name="DisallowOverscroll" value="true" />
    <description>
        CEO, General Electric
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <preference name="fullscreen" value="true" />
    <preference name="webviewbounce" value="true" />
    
    <icon src="img/icons/SteveBolze-icon-57.png" />

    <!-- For iOS-->
    <icon src="img/icons/SteveBolze-icon-57.png" gap:platform="ios" width="57" height="57" />
    <icon src="img/icons/SteveBolze-icon-72.png" gap:platform="ios" width="72" height="72" />
    <icon src="img/icons/SteveBolze-icon-114.png" gap:platform="ios" width="114" height="114" />

    <gap:splash src="img/splash/SteveBolze-splash.png" gap:platform="ios" width="320" height="480" />
    <gap:splash src="img/splash/SteveBolze-splash.png" gap:platform="ios" width="640" height="960" />
    <gap:splash src="img/splash/SteveBolze-splash.png" gap:platform="ios" width="640" height="1136" />
    
    <gap:splash src="img/splash/Default-Portrait~ipad.png" gap:platform="ios" width="768" height="1004" />
    <gap:splash src="img/splash/Default-Landscape~ipad.png" gap:platform="ios" width="1024" height="748" />
    <gap:splash src="img/splash/Default-Landscape@2x~ipad.png" gap:platform="ios" width="2048" height="1496" />
    <gap:splash src="img/splash/Default-Portrait@2x~ipad.png" gap:platform="ios" width="1536" height="2008" />

